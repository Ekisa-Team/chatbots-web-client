{
  "useTabs": false,
  "tabWidth": 2,
  "singleQuote": true,
  "trailingComma": "none",
  "printWidth": 100,
  "overrides": [
    {
      "files": "*.svelte",
      "options": {
        "svelteBracketNewLine": false,
        "svelteAllowShorthand": false,
        "svelteSortOrder": "options-scripts-markup-styles",
        "plugins": ["prettier-plugin-svelte"]
      }
    }
  ],
  "pluginSearchDirs": ["."]
}
