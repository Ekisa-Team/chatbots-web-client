{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"strict": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"paths": {
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$components": ["src/lib/components"],
			"$components/*": ["src/lib/components/*"],
			"$utils": ["src/lib/utils"],
			"$utils/*": ["src/lib/utils/*"],
			"$stores": ["src/stores"],
			"$stores/*": ["src/stores/*"],
			"$theme": ["src/theme"],
			"$theme/*": ["src/theme/*"]
		}
	}
}
